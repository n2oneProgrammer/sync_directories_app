<ConflictScreen>:
	title: title
	text: text
	comp_button: compare

	MDBoxLayout:
		orientation: "vertical"

        MDToolbar:
			id: title
			left_action_items: [["arrow-left", lambda x: root.goBack()]]
			right_action_items: [["check", lambda x: root.save()]]

		MDBoxLayout:
			orientation: "horizontal"
			spacing: dp(10)
        	padding: dp(20)
            
			MDBoxLayout:
				id: text
				size_hint: (0.7,1)

			MDBoxLayout:
				orientation: "vertical"
				size_hint: (0.3,1)

				AnchorLayout:
					size_hint: (1,0.15)
					anchor_x: "center"
					anchor_y: "center"

					MDRaisedButton:
						text: "File 1"
						on_press: root.file1()
				
				AnchorLayout:
					size_hint: (1,0.15)
					anchor_x: "center"
					anchor_y: "center"

					MDRaisedButton:
						text: "File 2"
						on_press: root.file2()

				AnchorLayout:
					size_hint: (1,0.15)
					anchor_x: "center"
					anchor_y: "center"
					id: compare

				BoxLayout:
					size_hint: (1,0.55)


