
<MainScreen>:
	MDBoxLayout:
		orientation: "vertical"

		MDToolbar:
			title: "Main"
			right_action_items: [["cog", lambda x: root.go_to_settings()]]


		BoxLayout:		
			spacing: dp(10)
        	padding: dp(20)
			orientation: "vertical"

			RecycleView:
				size_hint: (1,0.8)
				id: rv
				key_viewclass: 'viewclass'
				key_size: 'height'

				RecycleBoxLayout:
					padding: dp(5)
					default_size: None, dp(60)
					default_size_hint: 1, None
					size_hint_y: None
					height: self.minimum_height
					orientation: 'vertical'
			
			BoxLayout:		
				size_hint: (1,0.2)
				spacing: dp(10)
				orientation: "horizontal"

				AnchorLayout:
					anchor_x: "center"
					anchor_y: "center"

					MDRaisedButton:
						text: "Sync all"
						valign: "middle"
						halign: "center"
						on_press: root.sync_all()

				AnchorLayout:
					anchor_x: "center"
					anchor_y: "center"

					MDRaisedButton:
						text: "Dodaj"
						valign: "middle"
						halign: "center"
						on_press: app.goTo('create',False)
