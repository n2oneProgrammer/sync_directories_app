<SyncScreen>:
	title: title
	dir: dir
	content: content

	MDBoxLayout:
		orientation: "vertical"

		MDToolbar:
			id: title
			left_action_items: [["arrow-left", lambda x: app.goTo('main',True)]]
			right_action_items: [["delete", lambda x: root.delete_dialog()]]

		MDBoxLayout:
			orientation: "vertical"
			spacing: dp(10)
        	padding: dp(20)

			MDLabel:
				size_hint: (1,0.2)
				id: dir
				halign: "center"

			MDBoxLayout:
				size_hint: (1,0.6)
				id: content

			AnchorLayout:
				size_hint: (1,0.2)
				anchor_x: "center"
				anchor_y: "center"

				MDBoxLayout:
					orientation: "horizontal"
					spacing: dp(20)
				
					MDRaisedButton:
						text: "Sync"
						on_press: root.sync_now()

					MDRaisedButton:
						text: "Resolve all"
						on_press: root.resolve_all()
